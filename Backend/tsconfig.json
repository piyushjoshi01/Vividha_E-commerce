{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist" // Specifies the output directory for compiled files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
